# ===========================================
# Multi-Platform Sync - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Set these in Vercel Dashboard > Settings > Environment Variables

# -------------------------------------------
# Supabase Configuration (Required)
# -------------------------------------------
# Get from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# Shopee Partner API (Optional)
# -------------------------------------------
# Get from: https://open.shopee.com/
SHOPEE_PARTNER_ID=your-partner-id
SHOPEE_PARTNER_KEY=your-partner-key
SHOPEE_API_URL=https://partner.shopeemobile.com

# -------------------------------------------
# Momo Merchant API (Optional)
# -------------------------------------------
# Get from: Momo Merchant Center
MOMO_MERCHANT_ID=your-merchant-id
MOMO_SECRET_KEY=your-secret-key
MOMO_API_URL=https://api.momo.com.tw

# -------------------------------------------
# Shopline Store API (Optional)
# -------------------------------------------
# Get from: Shopline Developer Portal
SHOPLINE_API_KEY=your-api-key
SHOPLINE_API_SECRET=your-api-secret
SHOPLINE_WEBHOOK_SECRET=your-webhook-secret
SHOPLINE_VERIFY_TOKEN=shopline_verify

# -------------------------------------------
# Application Settings (Optional)
# -------------------------------------------
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
